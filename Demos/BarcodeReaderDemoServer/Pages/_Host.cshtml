@page "/"
@namespace BarcodeReaderDemoServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BarcodeReaderDemoServer</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="BarcodeReaderDemoServer.styles.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- if you need as soon to scan as soon as the app start, add this before _framework/blazor.server.js -->
    <!-- note that you need to double @@ character to scape from razor engine -->
    <script src="https://cdn.jsdelivr.net/npm/@@zxing/library@@0.18.2/umd/index.min.js"></script>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
